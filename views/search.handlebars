<div id="left-search" class="col-xs-3 col-sm-3 col-md-3">
  <h1>Options</h1>
</div>
<div id="right-search" class="col-xs-9 col-sm-9 col-md-9">
  <table class="table table-hover table-responsive">
    <tbody>
      {{# each chefs}}
      <tr>
        <td>
          <div class="media">
            <div class="media-left">
              <img class="media-object" src="/images/chef1.png" alt="...">
            </div>
            <div class="media-body">
              <a href="./{{this._id}}"class="media-heading">{{this.firstName}} {{this.lastName}}</a>
              <h4>{{this.headline}}</h4>
              <p>{{this.description}}</p>
              <div class="rating">
                <span>☆☆☆☆☆</span>
              </div>
            </div>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
